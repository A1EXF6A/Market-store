pipeline {
    agent none

    stages {
        // --- STAGE 0: Checkout del CÃ³digo ---
        stage('Checkout') {
            agent any
            steps {
                // Descarga el cÃ³digo del repositorio
                checkout scm 
            }
        }
        
        // --- STAGE 1: levantar front ---
        stage('levantar front') { 
            agent {  
                dockerfile {
                    dir 'Frontend' // ðŸ‘ˆ CORRECCIÃ“N: Usar 'Frontend' con F mayÃºscula
                }
            }
            steps {
                echo 'Iniciando Frontend...'
            }
        }
        
        // --- STAGE 2: levantar back ---
        stage('levantar back') { 
            agent {  
                dockerfile {
                    dir 'Backend' // ðŸ‘ˆ CORRECCIÃ“N: Usar 'Backend' con B mayÃºscula
                }
            }
            steps {
                echo 'Iniciando Backend...'
            }
        }
    }
}
